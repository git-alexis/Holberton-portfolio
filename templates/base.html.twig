<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

    	{% block javascripts %}
        	{% block importmap %}{{ importmap('app') }}{% endblock %}
			<script src="{{ asset('app.js') }}"></script>
    	{% endblock %}
    </head>
    <body>
        <header>
            <div class="header-content">
                <div class="baniere-content">
                    <img src={{ asset('images/baniere_header.jpg') }}>
                    <h1>TANK TALES</h1>
                </div>
                <div class="nav-section">
                    <a href={{ path('home') }}>Home</a> |
                    <a href={{ path('app_register') }}>Register</a> |
                    <a href={{ path('app_login') }}>Login</a>
					{% if user is not null %}
						|
                    	<a href={{ path('app_tank_index') }}>Tank</a> |
                    	<a href={{ path('app_skill_index') }}>Skill</a> |
                    	<a href={{ path('app_strategy_index') }}>Strategy</a> |
                    	<a href={{ path('app_tank_skill_index') }}>Tank-Skill</a> |
                    	<a href={{ path('app_skill_strategy_index') }}>Skill-Strategy</a>
					{% endif %}
                </div>
            </div>
        </header>

        <main>
            <article>
                {% block body %}{% endblock %}
            </article>
        </main>

        <footer>
			<p>Made by Alexis BILLEMONT</p>
		</footer>
    </body>
</html>
